@model sajjadmirzapour.Models.ShortNews

@{
    ViewData["Title"] = "حذف";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">حذف خبر</h1>
<p class="text-center">
    <a asp-action="Index" class="btn btn-primary">بازگشت به لیست اخبار</a>

</p>

<h3 class="text-center">آیا از حذف اطمینان دارید؟</h3>

<div>
    <hr />
    <dl class="row" style="direction:rtl">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Writer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Writer)
            <hr />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsTitle)
            <hr />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
            <hr />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
            <hr />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.date)
            <hr />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Image/ShortNews/@(Model.Picture)" class="" style="max-height:300px;max-width:300px;" />
            <br />
            <hr />
        </dd>
    </dl>
    <div class="row">
        <div class="col-12">
            <form asp-action="Delete" class="col-12">
                <input type="hidden" asp-for="id" />
                <input type="submit" value="حذف" class="btn btn-danger col-12" />
            </form>
        </div>
    </div>
</div>
