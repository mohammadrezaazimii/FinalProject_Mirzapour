@model sajjadmirzapour.Models.ShortNews

@{
    ViewData["Title"] = "جزئیات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">جزئیات خبر</h1>

<p class="text-center">
    <a asp-action="Index" class="btn btn-primary">بازگشت به لیست اخبار</a>

</p>
<div>
    <hr />
    <dl class="row" style="direction:rtl">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Writer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Writer)
            <hr />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsTitle)
            <hr />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
            <hr />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
            <hr />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.date)
            <hr />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Image/ShortNews/@(Model.Picture)" class="" style="max-height:300px;max-width:300px;" />
            <hr />
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-12">
        <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning col-12">ویرایش</a>

    </div>
</div>
