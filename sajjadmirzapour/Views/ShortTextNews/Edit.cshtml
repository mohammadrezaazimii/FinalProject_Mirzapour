@model sajjadmirzapour.Models.ShortTextNews

@{
    ViewData["Title"] = "ویرایش خبر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">ویرایش</h1>
<p class="text-center">
    <a asp-action="Index" class="btn btn-primary ">بازگشت به لیست اخبار</a>
</p>
<hr />
<div class="row" style="direction:rtl">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group col-12">
                <input type="submit" value="ذخیره" class="btn btn-success col-12" />

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
